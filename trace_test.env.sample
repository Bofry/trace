# OTLP Endpoints (Recommended for modern setups)
OTLP_HTTP_URL=http://127.0.0.1:4318
OTLP_GRPC_URL=127.0.0.1:4317

# Jaeger Endpoints (For local Jaeger testing)
# Jaeger v1.35+ supports OTLP natively on these ports
JAEGER_OTLP_HTTP_URL=http://127.0.0.1:4318
JAEGER_OTLP_GRPC_URL=127.0.0.1:4317

# Legacy Jaeger Endpoints (Will be auto-converted to OTLP)
JAEGER_HTTP_COLLECTOR=http://127.0.0.1:14268/api/traces
JAEGER_GRPC_COLLECTOR=127.0.0.1:14250

# Jaeger UI Query Endpoint (for trace verification)
JAEGER_QUERY_URL=http://127.0.0.1:16686/api/traces
